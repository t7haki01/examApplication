{% extends 'student/student_template.html.twig' %}

{% block css %}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Hello, {{ studentData.firstname }} {{ studentData.lastname }} </h1>

        {% if app.session.flashBag.has('msg')%}
            <div class="alert alert-info">
                {% for msg in app.session.flashBag.get('msg') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}

    <div><a href="{{ path('exam_main') }}">
            <button class="btn btn-success">Click Here to go taking Exam</button>
        </a></div>
    <h2>Exam Result</h2>
    <table>
    {% for data in examResult%}
        <tr><td><table class="table table-striped table-bordered">
            <tr>
                <th>Exam Title</th>
                <td>{{ data.exam.examTitle }}</td>
            </tr>
            <tr>
                <th class="text-right">Grade</th>
                <td>{{ data.score }}</td>
            </tr>
                    <tr><td colspan="2" class="text-center">
                            <a href="{{ path('student_check_result', {'examId':data.exam.id, 'studentId':studentId}) }}">
                                <button class="btn btn-info">
                                    Click Here to Check
                                </button></a>
                        </td></tr>
                </table></td></tr>
    {% endfor %}
    </table>

    </div>
{% endblock %}